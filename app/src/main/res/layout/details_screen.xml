<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"    >

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/error"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:text="Rick Sanchez"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_image"
        android:textStyle="bold"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/character_status"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alive"
        app:layout_constraintTop_toBottomOf="@id/character_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/location_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location"
        app:layout_constraintTop_toBottomOf="@+id/character_status"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/location_image"
        android:text="@string/location"
        app:layout_constraintTop_toTopOf="@+id/location_image"
        android:layout_marginStart="16dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/localitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/location_title"
        tools:text="Earth (Replacement Dimension)"
        app:layout_constraintTop_toBottomOf="@+id/location_title"
        />

    <ImageView
        android:id="@+id/origin_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/origin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/origin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin"
        app:layout_constraintStart_toEndOf="@+id/origin_image"
        app:layout_constraintTop_toTopOf="@+id/origin_image"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Earth (C-137)"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/origin_image"
        app:layout_constraintTop_toBottomOf="@+id/origin_title"
        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/back"
        android:backgroundTint="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>